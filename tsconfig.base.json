{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@social/auth-data-access": ["libs/auth/data/src/index.ts"],
      "@social/auth-feature": ["libs/auth/feature/src/index.ts"],
      "@social/auth-model": ["libs/auth/model/src/index.ts"],
      "@social/auth-ui": ["libs/auth/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
